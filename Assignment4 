#Genre and author 
class Book: 
    def __init___(self,title, author, genre, pages, rating, language, borrower, publicationyear, borroweddate, returndate, audience, format, duedate ):
        self.title = title
        self.author= author
        self.genre= genre
        self.pages= pages
        self.rating= rating 
        self.language= language 
        self.publicationyear= publicationyear
        self.audience = audience
        self.format = format 
        self.duedate= duedate 
        
        self.borrower= borrower
        self.borrowed= False
        self.borroweddate= borroweddate
        self.returndate = returndate

class Library: 
    #methods 
    def __init__(self):
        self.books={}

    def add_book(self):
        title= input('Enter a title ')
        author=input ('Enter the author')
        genre= input('Enter the genre ')
        pages= int(input('Enter the number of pages'))
        rating= int(input('Enter your rating'))
        language=input('Enter the language')
        publicationyear= input('Enter the publication year')
        audience= input('Enter the intended audience ')
        format = input('Enter the format ')

        book= Book(title, author, genre,pages, rating, language, publicationyear, audience, format)
        self.books.append(book) #make the key = title please 

    def borrow_book(self,):
        borrower=input('Enter the name of person borrowing')
        borrowed= True
        borroweddate=input('Enter borroweddaet in format DD-MM-YYYY')
        duedate=0
        title= input('Enter title of book you wish to borrow')
        if title in self.books:
            self.books[title].borrower=borrower 
            self.books[borrowed].borrowed=borrowed
            self.borroweddate=borroweddate
            self.duedate=0
        else:
            print('That is not a valid title')

